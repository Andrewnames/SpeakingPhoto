<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXF.Views.MenuPage"
              Padding="0,40,0,0"
             BackgroundColor="#F69781"
               Icon="hamburger.png"
             Title="Menu"
             >
  <ContentPage.Content  >

    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="#F56D4F" Padding="10">
      <Label Text="Menu" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" TextColor="White" />
      <ListView x:Name="listView" VerticalOptions="FillAndExpand" SeparatorVisibility="None" BackgroundColor="Transparent"  >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell x:Name="imageCell" Text="Add New Photo" TextColor="White"    ImageSource="ic_add_a_photo_white.png"  />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>